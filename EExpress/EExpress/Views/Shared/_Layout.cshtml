                                    <li><a href="@Url.Action("Index", "Bank")"><i class="fa fa-circle-o"></i> Bank</a></li>
                                    <li><a href="@Url.Action("Index", "Signature")"><i class="fa fa-circle-o"></i> Signature</a></li>
                                </ul>
                            </li>
                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-circle-o"></i> Transaction Connocement
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li class="treeview">
                                        <a href="#">
                                            <i class="fa fa-circle-o"></i> Process (Incoming &amp; Outgoing)
                                            <span class="pull-right-container">
                                                <i class="fa fa-angle-left pull-right"></i>
                                            </span>
                                        </a>
                                        <ul class="treeview-menu">
                                            <li><a href="#"><i class="fa fa-circle-o"></i> Outgoing Courier</a></li>
                                            <li><a href="#"><i class="fa fa-circle-o"></i> Incoming</a></li>
                                            <li><a href="#"><i class="fa fa-circle-o"></i> Outgoing Moda</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="#"><i class="fa fa-circle-o"></i> Ops Runsheet Courier</a></li>
                                    <li class="treeview">
                                        <a href="#">
                                            <i class="fa fa-circle-o"></i> Ops Manifest
                                            <span class="pull-right-container">
                                                <i class="fa fa-angle-left pull-right"></i>
                                            </span>
                                        </a>
                                        <ul class="treeview-menu">
                                            <li><a href="#"><i class="fa fa-circle-o"></i> Truck / Awb</a></li>
                                            <li><a href="#"><i class="fa fa-circle-o"></i> Truck / Dst</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="#"><i class="fa fa-circle-o"></i> POD Status</a></li>
                                    <li class="treeview">
                                        <a href="#">
                                            <i class="fa fa-circle-o"></i> Support
                                            <span class="pull-right-container">
                                                <i class="fa fa-angle-left pull-right"></i>
                                            </span>
                                        </a>
                                        <ul class="treeview-menu">
                                            <li><a href="#"><i class="fa fa-circle-o"></i> Insert Manifest</a></li>
                                            <li><a href="#"><i class="fa fa-circle-o"></i> Stock - Waybill</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-circle-o"></i> Report
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li><a href="@Url.Action("Index", "ShipmentOutboundOrInbound")"><i class="fa fa-circle-o"></i> Shipment Outbound/Inbound</a></li>
                                    <li><a href="@Url.Action("Index", "RepPerCustomer")"><i class="fa fa-circle-o"></i> Rep. Per Customer</a></li>
