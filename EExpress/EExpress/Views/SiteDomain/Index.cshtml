
@{
    ViewBag.Title = "Site / Domain";
}

<div ng-app="myApp" ng-controller="siteDomainController">
    <div class="row" ng-show="message">
        <div class="col-md-12">
            <div class="alert alert-info alert-dismissible">
                <button class="close" type="button" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-info"></i> Alert!</h4>
                <p>{{message}}</p>
            </div>
        </div>
    </div>
    <!-- /.row -->
    
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Form Site / Domain</h3>
                </div>
                <form class="form-horizontal" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="control-label col-md-2">Site Id</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" id="siteId" ng-model="m.my_domain" primary-key>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Site Name</label>
                            <div class="col-md-10">
                                <input type="hidden" id="siteNameSelected">
                                <select class="form-control select2" id="ddlSiteName" ng-model="m.nmd" ng-change="onSelectChange()">
                                    <option value="">Please Select</option>
                                    <option ng-repeat="x in listOrigin" value="{{x.nm}}" ng-selected="m.nmd === x.nm">{{x.nm}}</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button class="btn btn-primary" type="button" ng-click="addEditSiteDomain()"><i class="fa fa-save"></i> Save</button>
                        <button class="btn btn-default hidden" type="button">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List Site / Domain</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input class="form-control pull-right" type="text" id="" placeholder="Search" ng-model="siteName">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Site Id</th>
                                <th>Site Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="siteDomain in listSiteDomain | filter: siteName" pointer>
                                <td>{{siteDomain.my_domain}}</td>
                                <td>{{siteDomain.nmd}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>
@section Styles {
    <link href="~/Content/css/select2.css" rel="stylesheet">
    <link href="~/admin-lte/css/alt/AdminLTE-select2.css" rel="stylesheet">
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/angular-ui")
    @Scripts.Render("~/bundles/select2")
    <script src="@Url.Content("~/Scripts/site.js")"></script>
    <script src="@Url.Content("~/Scripts/EExpress/app.js")"></script>
    <script src="@Url.Content("~/Scripts/EExpress/services/siteDomainService.js")"></script>
    <script src="@Url.Content("~/Scripts/EExpress/controllers/siteDomainController.js")"></script>
    <script>
        $(function () {
            $(".select2").select2({
                width: "100%"
            });
        });
    </script>
}




