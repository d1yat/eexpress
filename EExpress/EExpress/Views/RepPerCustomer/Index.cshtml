
@{
    ViewBag.Title = "Rep. Per Customer";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Rep. Per Customer</h3>
            </div>
            <form class="form-horizontal" role="form">
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label col-md-2">Date From</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input class="form-control" type="text" id="" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask>
                            </div>
                        </div>
                        <label class="control-label col-md-2">Date To</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input class="form-control" type="text" id="" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Customer</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <input type="checkbox" id="chkCustomer">
                                </span>
                                <input class="form-control" type="text" id="txtCustomer" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-download"></i> Excel</button>
                    <button class="btn btn-default" type="reset">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /.row -->

@section Scripts {
@Scripts.Render("~/bundles/inputmask")
<script>
$(document).ready(function () {
    $('[data-mask]').inputmask();

    $("#chkCustomer").click(function () {
        if ($(this).is(":checked")) {
            $("#txtCustomer").prop("disabled", false);
        } else {
            $("#txtCustomer").prop("disabled", true);
        }
    })
})
</script>
}
