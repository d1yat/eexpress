
@{
    ViewBag.Title = "POD Status";
}

<div ng-app="myApp" ng-controller="podStatusController">
    <div class="row" ng-show="message">
        <div class="col-md-12">
            <div class="alert alert-info alert-dismissible">
                <button class="close" type="button" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-info"></i> Alert!</h4>
                <p>{{message}}</p>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Form POD Status</h3>
                </div>
                <form class="form-horizontal" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="control-label col-md-2">Pod Id</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" id="podId" ng-model="m.kode" primary-key>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Status Name</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" id="statusName" ng-model="m.nm">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Status</label>
                            <div class="col-md-10">
                                <select class="form-control" id="ddlStatus" ng-model="m.statusx">
                                    <option ng-repeat="opt in ddlStatus" value="{{opt.value}}" ng-selected="m.statusx === opt.value">{{opt.text}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Relation</label>
                            <div class="col-md-10">
                                <select class="form-control" id="ddlRelation" ng-model="m.kode_relasi">
                                    <option ng-repeat="opt in ddlRelation" value="{{opt.value}}" ng-selected="m.kode_relasi === opt.value">{{opt.text}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group hidden">
                            <label class="control-label col-md-2">Id</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" id="statusName" ng-model="m.id">
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button class="btn btn-primary" type="button" ng-click="addEditPODStatus()"><i class="fa fa-save"></i> Save</button>
                        <button class="btn btn-default" type="button" ng-click="resetForm()">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List POD Status</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input class="form-control pull-right" type="text" id="" placeholder="Search" ng-model="statusName">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Pod Id</th>         <!-- m.kode -->
                                <th>Status Name</th>    <!-- m.nm -->
                                <th>Status</th>         <!-- m.statusx -->
                                <th>Relation</th>       <!-- m.kode_relasi -->
                                <th hidden>Id</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="podStatus in listPODStatus | filter: statusName" ng-click="getPODStatusById(podStatus.id)" pointer>
                                <td>{{podStatus.kode}}</td>
                                <td>{{podStatus.nm}}</td>
                                <td><span class="label label-default">{{podStatus.statusx === "Y" ? "Activate" : "Deactivate"}}</span></td>
                                <td><span class="label label-default">{{podStatus.kode_relasi === "Y" ? "Success" : "Reject"}}</span></td>
                                <td hidden>{{podStatus.id}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/angular-ui")
    <script src="@Url.Content("~/Scripts/site.js")"></script>
    <script src="@Url.Content("~/Scripts/EExpress/app.js")"></script>
    <script src="@Url.Content("~/Scripts/EExpress/services/podStatusService.js")"></script>
    <script src="@Url.Content("~/Scripts/EExpress/controllers/podStatusController.js")"></script>
}


