
@{
    ViewBag.Title = "Courier";
}

<div ng-app="myApp" ng-controller="courierController">
    <div class="row" ng-show="message">
        <div class="col-md-12">
            <div class="alert alert-info alert-dismissible">
                <button class="close" type="button" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-info"></i> Alert!</h4>
                <p>{{message}}</p>
            </div>
        </div>
    </div>
    <!-- /.row -->
    
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Form City</h3>
                </div>
                <form class="form-horizontal" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="control-label col-md-2">Courier Id</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" id="courierId" ng-model="m.kode">
                            </div>
                            <div class="col-md-6 radio">
                                <label>
                                    <input type="radio" name="optTransportationType" value="Motor" ng-model="m.jns_kendaraan"> Motor
                                </label>
                                <label>
                                    <input type="radio" name="optTransportationType" value="Mobil" ng-model="m.jns_kendaraan"> Mobil
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Name</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" id="name" ng-model="m.nm">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Status</label>
                            <div class="col-md-10">
                                <select class="form-control" id="ddlStatus" ng-model="m.statusx">
                                    <option ng-repeat="opt in ddlStatus" value="{{opt.value}}" ng-selected="m.statusx === opt.value">{{opt.text}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">HP / Telephone</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" id="telp" ng-model="m.tlp">
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button class="btn btn-primary" type="button" ng-click="addEditCourier()"><i class="fa fa-save"></i> Save</button>
                        <button class="btn btn-default" type="button" ng-click="resetForm()">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List City</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input class="form-control pull-right" type="text" id="tSearch" placeholder="Search" ng-model="tSearch">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Courier Id</th>
                                <th>Name</th>
                                <th>HP / Telephone</th>
                                <th>What this?</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="courier in listCourier | filter: tSearch" ng-click="getCourierById(courier.kode)" pointer>
                                <td>{{courier.kode}}</td>
                                <td>{{courier.nm}}</td>
                                <td>{{courier.tlp}}</td>
                                <td>{{courier.jns_kendaraan}}</td>
                                <th><span class="label label-default">{{courier === "Y" ? "Activate" : "Deactivate"}}</span></th>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <p>
                        Note: <br>
                        <span><small class="help-block">* -K- Untuk kode kurir</small></span>
                        <span><small class="help-block">* -D- Untuk kode driver</small></span>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/angular-ui")
    <script src="@Url.Content("~/Scripts/site.js")"></script>
    <script src="@Url.Content("~/Scripts/EExpress/app.js")"></script>
    <script src="@Url.Content("~/Scripts/EExpress/services/courierService.js")"></script>
    <script src="@Url.Content("~/Scripts/EExpress/controllers/courierController.js")"></script>
}
