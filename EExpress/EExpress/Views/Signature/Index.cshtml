
@{
    ViewBag.Title = "Signature";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Form Signature</h3>
            </div>
            <form class="form-horizontal" role="form">
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label col-md-2">Tax Sign</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" id="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Finance Sign</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" id="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Payment Desc.</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" id="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Bank Acc Desc.</label>
                        <div class="col-md-10">
                            <textarea class="form-control" rows="4"></textarea>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Save</button>
                    <button class="btn btn-default" type="reset">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">List Signature</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input class="form-control pull-right" type="text" id="" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>Tax Sign</th>
                        <th>Finance Sign</th>
                        <th>Payment Desc</th>
                        <th>Bank Acc Desc</th>
                    </tr>
                    <tr>
                        <td>E-Express ID</td>
                        <td>Akhirudin Sudiyat</td>
                        <td>L/C</td>
                        <th>&minus;</th>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->

